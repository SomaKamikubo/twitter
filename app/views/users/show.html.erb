<%= link_to 'Back', tweets_path %>
<h2><span id="textbig"><%= @user.name%></span><font color="gray"> ID:<%=@user.id%></font></p></h2>

<% if current_user == @user %>
<p>編集</p>
<% else%>
<div id="follows_buttons_<%=@user.id%>">
  <%= render partial: 'relationships/follow', locals:{user: @user} %>
</div>
<%end%>

 
  

  <body>
    <div class="area">
      <input id="tab1" type="radio" name="tab_name" checked>
      <label class="tab_class" for="tab1">ツイート</label>
      <div class="content_class">
        <table class="a">
          <tbody>
            <% @tweets.each do |tweet| %>           
            <tr class="a">
              <td class="a"><%= link_to tweet.letter, tweet %></td>
              <% if tweet.user_id == @user.id %>
              <td class="a"><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
              <td class="a"><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <input type="radio" name="tab_name" id="tab2">
      <label class="tab_class" for="tab2">いいね</label>
      <div class="content_class">
        <table>
          <tbody>
            <% if @like_tweets != nil %>
            <% @like_tweets.each do |tweet| %>
            <tr>
              <td><%= link_to tweet.letter, tweet %></td>
              <% if tweet.user_id == @user.id %>
              <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
              <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
            <% end %>
            <% else %>
            <tr>
              <td>ここにいいねした一覧が表示されます</td>
            <tr>
              <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </body>