<% likeOnOff = current_user.like? tweet%>

<% if  likeOnOff %>
  <%= link_to image_tag('heart_red.png', :size => '30x30'), like_path(tweet),onclick: likeOnOff = !(likeOnOff), method: :delete, remote: true, class: 'btn btn-xs btn-warning' %>
<% else %>
  <%= link_to image_tag('heart_white.png',:size => '30x30'), tweet_likes_path(tweet),onclick: likeOnOff = !(likeOnOff) , method: :post, remote: true, class: 'btn btn-xs btn-default' %>
<% end %>

