<script>
  var pics_src = new Array("/assets/heart_white.png","/assets/heart_red.png");
  var num = 0;

  function slideshow(id){
      if (num == 1) {
          num = 0;
      }
      else {
          num ++;
      }
      document.getElementById(id).src=pics_src[num];
  }
</script>

